<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White stripe -->
    <item android:top="0dp" android:bottom="100dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <!-- Blue stripe -->
    <item android:top="100dp" android:bottom="100dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#005BBB" />
        </shape>
    </item>
    <!-- Red stripe -->
    <item android:top="200dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#D52B1E" />
        </shape>
    </item>
</layer-list>
